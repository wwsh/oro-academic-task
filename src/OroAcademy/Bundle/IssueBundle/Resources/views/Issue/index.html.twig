{% extends 'OroUIBundle:actions:index.html.twig' %}
{% import 'OroUIBundle::macros.html.twig' as UI %}
{% set pageTitle = 'Issues'|trans %}

{% block navButtons %}
    {% include 'OroImportExportBundle:ImportExport:buttons.html.twig' with {
        entity_class: entity_class,
        exportProcessor: 'oroacademy_issue',
        exportTemplateProcessor: 'oroacademy_issue',
        importProcessor: 'oroacademy_issue.add_or_replace',
        importTitle: 'Import'|trans,
        dataGridName: gridName
    } %}

    {% if resource_granted('issue_view') %}
        <div class="btn-group">
            {{ UI.addButton({
                'path': path('oroacademy_create_issue'),
                'entity_label': 'Issue'|trans
            }) }}
        </div>
    {% endif %}
{% endblock %}