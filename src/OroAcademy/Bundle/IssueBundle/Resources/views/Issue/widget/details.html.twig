{% import 'OroUIBundle::macros.html.twig' as UI %}
{% import 'OroEntityConfigBundle::macros.html.twig' as entityConfig %}

<div class="widget-content">
    <div class="row-fluid form-horizontal">
        <div class="responsive-block">
            {{ UI.renderHtmlProperty('oroacademy.issue.description.label'|trans, entity.description) }}
            {{ UI.renderProperty('oroacademy.issue.reporter.label'|trans, entity.reporter ? entity.reporter.fullName : '') }}
            {{ UI.renderProperty('oroacademy.issue.assignee.label'|trans, entity.assignee ? entity.assignee.fullName : '') }}
            {{ UI.renderHtmlProperty('oroacademy.issue.collaborator.label_plural'|trans, entity.getSimpleCollaboratorArray()|join('<br />')) }}
            {{ UI.renderHtmlProperty('oroacademy.issue.related_issues.label'|trans, entity.getPrettyRelatedIssues()|join('<br />')) }}
            {{ UI.renderProperty('oroacademy.issue.created_at.label'|trans, entity.createdAt|date) }}
            {{ UI.renderProperty('oroacademy.issue.updated_at.label'|trans, entity.updatedAt|date) }}
        </div>
    </div>
</div>
