{% extends 'OroDashboardBundle:Dashboard:widget.html.twig' %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

{% set gridName = 'dashboard-my-issues-grid' %}
{% set widgetTitle = 'oroacademy.dashboard.my_active_issues.title'|trans %}

{% block content %}
    {{ dataGrid.renderGrid(gridName, { 'userId' : 1 }) }}
{% endblock %}

{% block actions %}
    {% set actions = [{
    'url': path('oroacademy_my_issue_grid'),
    'type': 'link',
    'label': 'oroacademy.dashboard.my_active_issues.view_all.label'|trans
    }] %}

    {{ parent() }}
{% endblock %}
